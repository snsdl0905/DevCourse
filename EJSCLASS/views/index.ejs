<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/main.css">
</head>
<body>
    <h1>안녕하세요!</h1>
    <p><%= "Hello" + "World" %></p>
    <p><%= 10 + 2 %></p>
    <p><%= true ? "참" : "거짓" %></p>
    <p><%= "<h3>Hello1</h3>" %></p>
    <p><%-"<h3>Hello2</h3>" %></p>
    <div><%  let str = "Hello3" %>
        <%= str %>
    </div>
    <div>
        <%if(true){  %>
        <h2>출력!!!!!!</h2>
        <% } %>
        <% if(false){ %>
        <h2>탈락!!!!!!</h2>
        <% } %>
    </div>
    <div>
        <% if(true){ %>
            <p>참</p>
        <% } else{ %>
            <p>거짓</p>
        <% } %>
    </div>
    <div>
        <% for(let i=1; i<=3; i++) {%>
            <div><test href="/order/<%= i %>">test <%= i %>로</a></div>
        <% } %>
    </div>
    <div>
        <% let arr = ["apple", "banana", "cherry"] %>
        <% arr.forEach((fruit) => { %>
            <h3><%= fruit %>입니다.</h3>
        <% }) %>
    </div>
    <div>
        <% let arr2 = ["map1", "map2", "map3"] %>
        <% arr2.map((val) => { %>
            <h3><%= val %>입니다</h3>
        <% }) %>
    </div>
    <ul>
        <% for(let person of people){ %>
            <li><%= person.name %></li>
        <% } %>
    </ul>
    <div>
        <% if(people){ %>
            <h4><%= people[0].name %></h4>
        <% } %>
    </div>
    <div class="container">
        <h1>List</h1>
        <form action="/addTask" method="POST">
            <input type="text" name="newTask" placeholder="할 일 목록 추가해주세요">
            <button type="submit">추가하기</button>
        </form>
        <ul>
            <% tasks.forEach((task) => { %>                
                <li>
                    <%= task %>
                    <form action="/deleteTask" method="POST">
                        <input type="hidden" name="task" value="<%= task %>">
                        <button type="submit">지우기</button>
                    </form>
                </li>
            <% }) %>
        </ul>

    </div>
    <div>
        <ul>
            <% for(let user of users){ %>
                    <li class="<% user.role %>">
                    <%= user.name %> <%= user.age %> <%= user.role %>
                    <% if(user.age >= 18) { %>
                        <div>pass</div>
                    <% } else {%>
                        <div>reject</div>
                    <% } %>
                </li>
            <% } %>
        </ul>
    </div>
</body>
</html>